{
   "background": {
      "scripts": ["bg/background.js"]
   },
   "browser_action": {
      "default_icon": "img/128.png",
      "default_popup": "menu/menu.html",
      "default_title": "Video Sniffer"
   },
   "default_locale": "en",
   "description": "Sniffs out video files on web pages",
   "icons": {
      "128": "img/128.png"
   },
   "manifest_version": 2,
   "name": "Video Sniffer",
   "permissions": [ "tabs", "webRequest", "downloads", "http://*/*", "https://*/*" ],
   "short_name": "Video Sniffer",
   "version": "0.0.1"
}
